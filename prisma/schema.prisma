generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String?
  email     String   @unique
  image     String?
  password  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Course    Course[]
}

model Course {
  courseId     String       @id @default(uuid())
  title        String       @unique
  description  String?
  image        String?
  price        Decimal?
  published    Boolean      @default(false)
  attachments  Attachment[]
  chapters     Chapter[]
  attachmentId String?      @unique
  category     String?
  creatorId    String
  creator      User         @relation(fields: [creatorId], references: [id])
}

model Chapter {
  chapterId    String      @id @default(uuid())
  title        String      @unique
  description  String?
  isPreview    Boolean     @default(false)
  video        String?
  courseId     String
  attachmentId String?     @unique
  course       Course      @relation(fields: [courseId], references: [courseId])
  attachment   Attachment? @relation(fields: [attachmentId], references: [attachmentId])
}

model Attachment {
  attachmentId   String    @id @default(uuid())
  filename       String
  courseCourseId String?
  chapterId      String?
  Chapter        Chapter[]
  course         Course?   @relation(fields: [courseCourseId], references: [courseId])
}
